{
  "name": "leanzh-translator",
  "displayName": "Lean-zh Translator",
  "description": "Translator for lean document",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:leanzh-translator.startTranslation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "leanzh-translator.startTranslation",
        "title": "翻译本文档"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "leanzh-translator.startTranslation",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Lean-zh Translator",
      "properties": {
        "leanzh-translator.apiKey": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "您从 DeepSeek 官网获取的 API Key。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "compile:force": "node esbuild.js",
    "watch": "npm run watch:tsc && npm run watch:esbuild",
    "watch:tsc": "tsc --noEmit --watch --project ./",
    "watch:esbuild": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.5.2",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.6.2",
    "express": "^5.1.0",
    "mdast-util-to-string": "^4.0.0",
    "openai": "^5.5.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.4"
  },
  "readme": "README.md"
}
